  "Parameters":{  
    "LexBotName":{  
      "Type":"String",
      "Description":"The name of the Lex Bot",
      "Default":"SampleBot",
      "MinLength":2,
      "MaxLength":50,
      "AllowedPattern":"^[a-zA-Z_]+$",
      "ConstraintDescription":"Lex Bot name can only contain alphabetical and underscore characters, no spaces are allowed."
    }
